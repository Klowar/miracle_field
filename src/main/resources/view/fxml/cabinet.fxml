<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
             fx:controller="miracle.field.client.controller.CabinetController" minWidth="400">
    <center>
        <FlowPane>
            <Label fx:id="username"/>
            <Button text="ИГРАТЬ" onMouseClicked="#searchGame"/>
        </FlowPane>
    </center>
    <right>
        <BorderPane>
            <top>
                <Label>Статистика игры</Label>
            </top>
            <center>
                <GridPane>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Очки: "/>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Побед: "/>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Поражений: "/>
                    <Label GridPane.columnIndex="0" GridPane.rowIndex="3" text="Всего игр: "/>

                    <Label fx:id="score" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <Label fx:id="wins" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label fx:id="loses" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label fx:id="gameTotal" GridPane.columnIndex="1" GridPane.rowIndex="3"/>


                </GridPane>
            </center>
        </BorderPane>

    </right>
</BorderPane>